<ul class="small-block-grid-2">
	<% @games.each do |game| %>
	<% unless current_user.nil? %>
	<% unless game.is_owner(current_user) %>
	<% if game.challengers_count > 0 %>
	<li>
		<div class="games">
			<h3 style="color: white;"> <%= game.title %> </h3>
			<p> <%= game.pretty_booked_from %> TO <%= game.pretty_booked_till %> </p>
			<p> At: <%= link_to game.venue.name, venue_path(game.venue) %> </p>
			<p>Teams Required: <%= game.required_teams %></p>
			Spots left: <% game.challengers_count.times do %>
			<img src="<%= asset_path('soccer.png') %>">
			<% end %>
			<%= button_to "MatchUP", players_path(:player => {team_id: current_user.id, game_id: game.id, is_owner: false }) %>
		</div>
	</li>
	<% end %>
	<% end %>
	<% end %>
	<% end %>
</ul>

