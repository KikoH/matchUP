<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4 text-center">

<% @games.each do |game| %>
	<li class="a">
	<% unless current_user.nil? %>
	<% if game.challengers_count > 0 %>
	<div class="games">
		<% if game.is_owner(current_user) %><span class="round alert label">Your match</span><% end%>
		<h4> <%= link_to game.title, game_path(game) %> </h4>
		<p> <%= game.pretty_booked_from %> TO <%= game.pretty_booked_till %> </p>
		<p> At: <%= link_to game.venue.name, venue_path(game.venue) %> </p>
		<p>Teams Required: <%= game.required_teams %></p>
		Spots left: <% game.challengers_count.times do %>
		<img src="<%= asset_path('soccer.png') %>">
	<% end %>
		</div>
			<% if game.is_owner(current_user) %>
			<%elsif game.is_challenger(current_user) %>
				<span style="font-size: 20px" class="success label roundright">Matched UP. Waiting for reply</span>
			<% else %>
				<%= button_to "MatchUP", players_path(:player => {team_id: current_user.id, game_id: game.id, is_owner: false }), {:class => "button round success matchup" } %>
				<% game.challengers.each do |c| %>
				<%= link_to c.team.email, team_path(c.team.id) %><br/>
				<% end %>
			<% end %>
	</li>
	<% end %>
	<% end %>
<% end %>
</ul>