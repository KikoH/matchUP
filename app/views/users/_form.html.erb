<%= form_for @user do |f| %>

<div class="email">
   <%= f.label :email %><br />
   <%= f.text_field :email %>
</div>

<div class="name">
   <%= f.label :name %><br />
   <%= f.text_field :name %>
</div>

<div class="location">
   <%= f.label :location %><br />
   <%= f.text_field :location %>
</div>

<p> <%= f.file_field :image %> </p>

<div class="field">
   <%= f.label :password %><br />
   <%= f.password_field :password %>
</div>
<div class="field">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation %>
</div>

<%= f.submit %>

<% end %>